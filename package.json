{
  "name": "api",
  "version": "1.0.0",
  "description": "API Node.js Express + Sequelize con seguridad avanzada, RBAC, auditoria y multientorno.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
  "start": "node src/server.js",
  "dev": "nodemon src/server.js",
  "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --runInBand",

  "db:migrate": "sequelize-cli db:migrate --config config/config.cjs",
  "db:migrate:undo": "sequelize-cli db:migrate:undo --config config/config.cjs",
  "db:seed": "sequelize-cli db:seed:all --config config/config.cjs",
  "db:seed:undo": "sequelize-cli db:seed:undo:all --config config/config.cjs",
  "db:create": "sequelize-cli db:create --config config/config.cjs",
  "db:drop": "sequelize-cli db:drop --config config/config.cjs"
  },

  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.2.0",
    "joi": "^17.11.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.3",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.1.4"
  },
  "license": "ISC"
}
